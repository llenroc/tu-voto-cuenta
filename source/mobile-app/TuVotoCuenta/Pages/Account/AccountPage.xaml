<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding Title}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TuVotoCuenta.Pages.AccountPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Margin="40,40,40,40">
                <Image Source="{Binding AccountImage}" WidthRequest="160" HeightRequest="160" />
                <Label Text="{Binding Amount}" HorizontalTextAlignment="Center" FontAttributes="Bold" Style="{DynamicResource PageDarkSmall}" />
                <Label Text="{Binding Account}" Margin="0,0,0,30" HorizontalTextAlignment="Center" FontAttributes="Bold" Style="{DynamicResource PageDarkSmall}" />
                 <Label Text="Recuerda que al registrarte con nosotros:" FontAttributes="Bold" Style="{DynamicResource PageDarkSmall}" />
                <Label Text="1. Automáticamente estás creando una cuenta en la cadena de bloques (blockchain)." Style="{DynamicResource PageDarkSmall}" />
                <Label Text="2. Podrás compartir información de una casilla o votar por la información." Style="{DynamicResource PageDarkSmall}" />
                <Label Text="3. Tendrás acceso a un identificador gráfico único." Style="{DynamicResource PageDarkSmall}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>