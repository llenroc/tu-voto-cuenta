                            </Label>
                            <Entry Style="{StaticResource numericArrowEntry}" Text="{Binding PartyMOR, Converter={StaticResource intToStringConverter}}">
                                <Entry.Behaviors>
                                    <behaviors:EntryIntValidation />
                                    <behaviors:StepEntryLostFocus />
                                </Entry.Behaviors>
                            </Entry>
                        </StackLayout>
                        <Image Grid.Row="8" Grid.Column="0" Source="pes.jpg" VerticalOptions="Start">
                        </Image>
                        <StackLayout Grid.Row="8" Grid.Column="1" Orientation="Vertical">
                            <Label Text="ANDRES M. LOPEZ OBRADOR" Style="{StaticResource PartyTitle}">
                            </Label>
                            <Entry Style="{StaticResource numericArrowEntry}" Text="{Binding PartyES, Converter={StaticResource intToStringConverter}}">
                                <Entry.Behaviors>
                                    <behaviors:EntryIntValidation />
                                    <behaviors:StepEntryLostFocus />
                                </Entry.Behaviors>
                            </Entry>
                        </StackLayout>
                        <Label Grid.Row="9" Grid.Column="0" Text="Cand. Indep." FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Start" />
